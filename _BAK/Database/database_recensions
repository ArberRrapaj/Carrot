CREATE TABLE `Recensions` (
  `RecensionID` int(11) NOT NULL AUTO_INCREMENT,
  `UserID` int(11) NOT NULL,
  `GameID` int(11) NOT NULL,
  `Text` text CHARACTER SET utf8 COLLATE utf8_unicode_ci NOT NULL,
  `Rating` tinyint(2) NOT NULL,
  PRIMARY KEY (`RecensionID`),
  KEY `UserID` (`UserID`),
  KEY `GameId` (`GameID`) USING BTREE,
  CONSTRAINT `recensions_ibfk_3` FOREIGN KEY (`UserID`) REFERENCES `users` (`userid`) ON DELETE CASCADE ON UPDATE CASCADE,
  CONSTRAINT `recensions_ibfk_4` FOREIGN KEY (`GameID`) REFERENCES `games` (`gameid`) ON DELETE CASCADE ON UPDATE CASCADE
) ENGINE=InnoDB AUTO_INCREMENT=6 DEFAULT CHARSET=utf8 COLLATE=utf8_unicode_ci